	`find @srcdir@/js/server/tests -name "*.js" | grep -v "ranges-combined"` \
	`find @srcdir@/js/common/tests -name "*.js"` \
	`find @srcdir@/js/client/tests -name "*.js"` \
	\
	`find @srcdir@/js/apps/system/_system/cerberus/APP -name "*.js"` \
